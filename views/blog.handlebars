<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Current comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <p>{{comment.content}}</p>
        <small><i>Created by {{comment.user.name}} on {{format_date comment.date_created}}</i></small>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  <input type="text" id="comment-content">
  <p>
    <button value="{{id}}" id="commenter" class="btn btn-primary">Comment</button>
  </p>
</div>

<script src="/js/comment.js"></script>